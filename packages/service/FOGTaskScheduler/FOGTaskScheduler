#!/usr/bin/php -q
<?php
	@error_reporting( 0 );
	require_once( dirname(realpath(__FILE__)) . "/../etc/config.php" );
	require_once( WEBROOT . '/commons/base.inc.php' );
	$FOGCore->clear_screen(SCHEDULERDEVICEOUTPUT);
	$FOGCore->out($FOGCore->getBanner(),SCHEDULERDEVICEOUTPUT);
	$FOGCore->wait_interface_ready($FOGCore->getSetting('FOG_UDPCAST_INTERFACE'),SCHEDULERDEVICEOUTPUT);
	$TS = new TaskScheduler();
	$TS->serviceStart();
	while( true )
	{
		$TS->serviceRun();
		sleep(SCHEDULERSLEEPTIME);
	}
	$TS->outall(" * Service has ended.");
?>
